@*@model IEnumerable<LanzhouBeefNoodles.Models.Noodle>*@
@model LanzhouBeefNoodles.ViewModels.HomeViewModel

@*@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers*@ 
<!--页面下有多个layout文件，通过layout名称对应相应的layout视图-->
@*@{
       Layout = "_layout";
    }*@

@{
    ViewData["Title"] = "Index";
}

<h2>产品列表</h2>

<!--Model指的是@model中的Noodle集合-->
@foreach (var noodle in Model.Noodles)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@noodle.ImageUrl" alt="">
            <div class="caption">
                <h3 class="pull-right">￥@noodle.Price</h3>
                <h3>
                    <a asp-controller="Home"
                       asp-action="Detail"
                       asp-route-id="@noodle.Id">@noodle.Name</a>
                </h3>
                <p>@noodle.ShortDescription</p>
            </div>
        </div>
    </div>
}

<h2>评论</h2>

<div class="list-group">
    @foreach (var feedback in Model.Feedbacks)
    {
        <a class="list-group-item">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="list-group-item-heading">@feedback.Name</h5>
                <small class="pull-right">@feedback.CreateDateUTC</small>
            </div>
            <p class="list-group-item-text">@feedback.Message</p>
        </a>
    }
</div>

